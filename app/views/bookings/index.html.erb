              <img class="ship-img" src="https://source.unsplash.com/1600x900/?boat,yacht" alt="ship image">
            </div>
            <div class="card-description">
              <h2><%= booking.ship.name %></h2>
            <%# <%= cl_image_tag @ship.photo.key, height: 300, width: 400, crop: :fill %>
              <p><%= booking.ship.category%>
                âˆ™
                <%= booking.ship.location %></p>
              <p class="card-price"><%= booking.ship.price %>
                CHF</p>
                <%# <td><%= link_to 'Edit', edit_ship_path(garden)</td> %>
                  <%# <td><%= link_to 'Destroy', ship, method: :delete, data: { confirm: 'Are you sure?' }</td> %>
            </div>
          </div>


<body>
  <div class="full-page-size margin-20">
    <h1 class = "title-index">Your bookings</h1>
    <div class="cards no-return">
      <% @bookings.each do |booking| %>
        <div class="card">
          <div id ="booking-dates">
            <div class="card-description">
            <p>From</p>
            <h3><%= "#{booking.start_time}" %></h3>
            <p>To</p>
            <h3><%= "#{booking.end_time}" %></h3>
            </div>
            <div>
              <%= cl_image_tag booking.ship.photo.key, height: 300, width: 400, crop: :fill %>
            </div>
            <div class="card-description">
              <h2><%= link_to booking.ship.name, ship_path(booking.ship)%></h2>
            <%# <%= cl_image_tag @ship.photo.key, height: 300, width: 400, crop: :fill %>
              <p><%= booking.ship.category%>
                âˆ™
                <%= booking.ship.location %></p>
              <p class="card-price"><%= booking.ship.price %>
                CHF</p>
                <%# <td><%= link_to 'Edit', edit_ship_path(garden)</td> %>
                  <%# <td><%= link_to 'Destroy', ship, method: :delete, data: { confirm: 'Are you sure?' }</td> %>
            </div>
          </div>
        </div>
      <%end %>
    </div>
    <div class="center-button">
    <%= link_to 'Back to ships', ships_path(@ships), class:"button", id: "small" %>
    </div>
  </div>
</body>

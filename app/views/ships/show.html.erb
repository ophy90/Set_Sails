<div class="full-page-size margin-20">
    <div class="title-ship">
      <h1><%=@ship.name%></h1>
      <p><%=@ship.category%></p>
      <p><%=@ship.location%></p>
    </div>
    <div class="container-first">
    <div class="details-ship">
      <p><%=@ship.description%></p>
    </div>
    <div class="ship-carrousel">
      <img class="ship-img-show" src="https://source.unsplash.com/1600x900/?boat,yacht" alt="ship image">
    </div>
  </div>
  <div class="container-second">
    <p><%=@ship.price%></p>
    <a class="button" href="#">Réserver</a>
  </div>
  <div class="card container">
    <h2>Caractéristiques</h2>
    <div class="">
      <div class="item">
        <i class="fas fa-wifi"></i>
        <p>Wifi gratuit</p>
      </div>
      <div class="item">
        <i class="fas fa-dog"></i>
        <p>Animaux autorisés</p>
      </div>
      <div class="item">
        <i class="fas fa-leaf"></i>
        <p>Bateau responsable</p>
      </div>
    </div>
  </div>
  <div class="container-fourth">
    <h2>Reviews</h2>
  </div>
</div>
